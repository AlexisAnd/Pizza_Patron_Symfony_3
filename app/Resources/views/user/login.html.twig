{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h2 class="mt-4 mb-5 text-center">Se connecter</h2>
        <div class="row">
            <div class="col"></div>
                <div class="col-6 mb-5">
                    <div>
                        {% include 'inc/flash_messages.html.twig' %}
                    </div>

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('app.user.login') }}" method="post">
                        <div class="form-group">
                            <label for="username">Email:</label>
                            <input type="email" class="form-control" aria-describedby="emailHelp" id="username" name="_username" value="{{ last_username }}" />
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe:</label>
                            <input type="password" class="form-control" id="password" name="_password" />
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" for="remember_me">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" checked />
                                Rester Connecté
                            </label>
                        </div>
                            <button type="submit" class="btn btn-info">login</button>
                        </p>
                    </form>
                    <p><a href="{{ url('app.account.password_recovery') }}">Mot de passe oublié?</a></p>
                    <p><a href="{{ url('app.account.register') }}">Pas encore de compte?</a></p>
                </div>
            <div class="col"></div>
        </div>
    </div>

    {% include "inc/footer.html.twig" %}

{% endblock %}

