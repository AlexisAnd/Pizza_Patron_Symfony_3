{% extends 'base.html.twig' %}

{% block body %}


    <div class="container">

        <h2 class="mt-4 mb-5 text-center">Modifiez votre mot de passe</h2>

        {{ form_errors(form.password) }}


        <div class="row">
            <div class="col"></div>
            <div class="col-6">
                {{ form_start(form, { 'attr': { 'novalidate': 'novalidate' } }) }}


                <p>
                    {{ form_widget(form.password) }}
                </p>

                <input type="submit"  class="btn btn-primary" name="submit" value="Valider">
                </p>

                {{ form_end(form) }}

            </div>
            <div class="col"></div>
        </div>
    </div>

{% include "inc/footer_fixed.html.twig" %}

{% endblock %}